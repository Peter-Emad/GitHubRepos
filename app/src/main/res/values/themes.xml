<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubRepos" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
    </style>

    <style name="Theme.CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/Theme.GitHubRepos</item>
    </style>

    <style name="Home.Toolbar.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/petrol</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Home.Search.Edit.Text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/manatee</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Home.Search.Empty.State.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/petrol</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Home.Search.Empty.State.SubTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/manatee</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Home.Search.Content.State.Repo.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/petrol</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Home.Search.Content.State.Repo.Description" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/manatee</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Home.Search.Content.State.Repo.Count" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/manatee</item>
        <item name="fontFamily">sans-serif</item>
    </style>



    <style name="Home.Repo.Details.Full.Name" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/petrol</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>


    <style name="Home.Repo.Details.Language" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/manatee</item>
        <item name="fontFamily">sans-serif</item>
    </style>


    <style name="Home.Repo.Details.Grid.Text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/petrol</item>
        <item name="fontFamily">sans-serif</item>
    </style>
</resources>